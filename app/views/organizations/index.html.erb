<%= render 'layouts/header' %>

<h1 style = 'margin-left:6%;'>Communities</h1>

<div>



<div class="row" style = 'margin-top:100px;margin-bottom:100px;text-align:center;'>

<% @orgs.each_with_index do |org, index| %>
	<%img_name = "img" + ((index % 2) + 1).to_s + ".jpg" %>
	<div class="col-sm-4" style:"text-align:center;width=200;height=200"> <%=link_to image_tag(img_name, :width=> "180px", :class=> 'card-1'), 'organizations/' + org.name + '?id=' + org.id.to_s%>

		<h5 style = 'margin-top:20px;'><%=org.name%></h5>


	</div>

	<% if index + 1 % 3 == 0 %>
		</div>
		<div class="row" style = 'margin-top:100px;margin-bottom:100px;'>
	<% end%>

<% end %>

<% if @orgs.count + 1 % 3 != 0 %>
	</div>
<% end %>

</div>


