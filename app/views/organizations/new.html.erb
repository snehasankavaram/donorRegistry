<%= render 'layouts/orgheader' %>

<% provide(:title, 'Sign up') %>
<html>



<div class="row">

  <div class="col-md-5 col-md-offset-4">
    <h1 class = "title">Hello! Sign up to Join Our Platform!</h1>
    <%= form_for(@org) do |f| %>

      <h4 class = 'first_field header'>Organization Info</h4>

      <%= f.label "Organization Name", :class => 'first_field' %>
      <%= f.text_field :name, :class => 'form-control' %>

      <%= f.label "Link to Website (optional)", :class => 'first_field' %>
      <%= f.text_field :link, :class => 'form-control' %>

      <!-- Hours -->

      <h4 class = 'first_field header'>Open Hours</h4>

       <div class="row" >


        <div class="col-sm-4" style:"width=200;height=200">

          <h4 class = 'first_field header'>Sunday</h4>

          <%= f.label "open", :class => 'first_field' %>
          <%= f.time_field :sun_open, :class => 'form-control' %>

          <%= f.label "close", :class => 'first_field' %>
          <%= f.time_field :sun_close, :class => 'form-control' %>

        </div>

        <div class="col-sm-4" style:"width=200;height=200">
          <h4 class = 'first_field header'>Monday</h4>

          <%= f.label "open", :class => 'first_field' %>
          <%= f.time_field :mon_open, :class => 'form-control' %>

          <%= f.label "close", :class => 'first_field' %>
          <%= f.time_field :mon_close, :class => 'form-control' %>
        </div>

        <div class="col-sm-4" style:"width=200;height=200">
          <h4 class = 'first_field header'>Tuesday</h4>

            <%= f.label "open", :class => 'first_field' %>
            <%= f.time_field :tues_open, :class => 'form-control' %>

            <%= f.label "close", :class => 'first_field' %>
            <%= f.time_field :tues_close, :class => 'form-control' %>
        </div>

      </div>

      <div class="row" style = 'margin-bottom:100px;'>



        <div class="col-sm-4" style:"width=200;height=200">

            <h4 class = 'first_field header'>Wednesday</h4>

            <%= f.label "open", :class => 'first_field' %>
            <%= f.time_field :wed_open, :class => 'form-control' %>

            <%= f.label "close", :class => 'first_field' %>
            <%= f.time_field :wed_close, :class => 'form-control' %>
        </div>

        <div class="col-sm-4" style:"width=200;height=200">
            <h4 class = 'first_field header'>Thursday</h4>

            <%= f.label "open", :class => 'first_field' %>
            <%= f.time_field :thurs_open, :class => 'form-control' %>

            <%= f.label "close", :class => 'first_field' %>
            <%= f.time_field :thurs_close, :class => 'form-control' %>

        </div>
        <div class="col-sm-4" style:"width=200;height=200">
            <h4 class = 'first_field header'>Friday</h4>

            <%= f.label "open", :class => 'first_field' %>
            <%= f.time_field :fri_open, :class => 'form-control' %>

            <%= f.label "close", :class => 'first_field' %>
            <%= f.time_field :fri_close, :class => 'form-control' %>
        </div>

        <div class="col-sm-4" style:"width=200;height=200">
             <h4 class = 'first_field header'>Saturday</h4>

            <%= f.label "open", :class => 'first_field' %>
            <%= f.time_field :sat_open, :class => 'form-control' %>

            <%= f.label "close", :class => 'first_field' %>
            <%= f.time_field :sat_close, :class => 'form-control' %>
        </div>
      </div>






      <%= f.label :phone_number, :class => 'first_field' %>
      <%= f.telephone_field :phone_number, :class => 'form-control' %>


      <%= f.label "Address", :class => 'first_field' %>
      <%= f.text_field :address, :class => 'form-control' %>

      <%= f.text_field :address_line_2, :class => 'form-control' %>


      <%= f.label "About Your Organization", :class => 'first_field' %>
      <p>Donors will be able to see this when they visit your page to donate to your registry.</p>
      <%= f.text_area :about, :class => 'form-control' %>


       <h4 class = 'first_field header'>Account Credentials</h4>

      <%= f.label :username, :class => 'first_field' %>
      <%= f.text_field :username, :class => 'form-control' %>


      <%= f.label :password, :class => 'first_field' %>
      <%= f.password_field :password, :class => 'form-control' %>



      <%= f.label :password_confirmation, "Confirm Password", :class => 'first_field'%>
      <%= f.password_field :password_confirmation, :class => 'form-control' %>

      <%= f.submit "Create Account", :class => 'btn btn-primary first_field'%>
    <% end %>
  </div>
</div>
</html>


